{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "typeRoots": ["./node_modules/@types", "./@types"],
    "types": ["node", "express"]
  },
  "include": [
    "./src/**/*.ts",
    "./@types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
